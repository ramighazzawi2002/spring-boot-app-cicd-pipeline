pipeline {
  agent {
    docker {
      // Ensure this image is correct and accessible
      image 'pshar10/maven-pranav-docker-agent:v1'
      // These arguments allow Docker and Git operations inside the container
      args '--user root --privileged -v /var/run/docker.sock:/var/run/docker.sock' 
    }
  }
  stages {
    
    stage('Checkout') {
      steps {
        // --- CRITICAL FIX: Ensures the full Git repository (.git folder) is present ---
        checkout scm
        // -----------------------------------------------------------------------------
        sh 'echo Repository checked out successfully'
      }
    }
    
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // Assumes your spring-boot-app is built using Maven
        sh 'cd spring-boot-app && mvn clean package' 
      }
    }
    
    stage('Static Code Analysis') {
      environment {
        // Replace this with your actual SonarQube URL
        SONAR_URL = "http://54.144.5.200:9000" 
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "pshar10/cicd-pipeline:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred') // Check credentials ID
      }
      steps {
        script {
          sh 'cd spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          
          // Use the correct Docker registry and credentials ID
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }
    
    stage('Ask for Replicas') {
      steps {
        script {
          // This is a manual input step, pausing the pipeline
          replicas = input(
            message: 'Enter the number of replicas:',
            parameters: [
              string(defaultValue: '2', description: 'Number of replicas', name: 'replicas')
            ]
          )
        }
      }
    }
    
    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "spring-boot-app-cicd-pipeline"
        GIT_USER_NAME = "ramighazzawi2002" // Ensure this is your GitHub username
      }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
              sh '''
                echo "Replicas value: ${replicas}"

                # Configure Git identity for the commit
                git config user.email "rami.ghazzawiabed@gmail.com"
                git config user.name "ramighazzawi2002"
                
                # Use environment variable for build number
                BUILD_NUMBER="${BUILD_NUMBER}" 
                REPLICAS_VALUE="${replicas}"

                # Update the image tag in the deployment file
                # The path is 'Manifests/deployment.yml' relative to the repository root
                sed -i "s|image: pshar10/cicd-pipeline:[^ ]*|image: pshar10/cicd-pipeline:${BUILD_NUMBER}|g" Manifests/deployment.yml

                # Update the replicas count in the deployment file
                sed -i "s|replicas: [0-9]*|replicas: ${REPLICAS_VALUE}|g" Manifests/deployment.yml
                
                # Commit the changes to the local repository
                git add Manifests/deployment.yml
                git commit -m "Update deployment image to version ${BUILD_NUMBER} and replicas to ${REPLICAS_VALUE}"
                
                # Push the changes back to GitHub using the token
                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
              '''
            }
        }
    }
  }
}